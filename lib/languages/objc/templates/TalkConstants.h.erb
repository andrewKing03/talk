<%= autogenerated_warning %>

<% @base[:glossary].each do |glossary| %>

// @glossary <%= glossary[:name] %>
<%= comment_block(glossary) %>

<% glossary[:term].each do |term| %>
<%= comment_block(term) %>
#define k<%= term[:name] %> @"<%= term[:value] %>"
<% end # term %>

<% end # glossary %>

<% @base[:enumeration].each do |enumeration| %>
<%= comment_block(enumeration) %>
enum <%= truncated_name(enumeration[:name]) %>
{
  <% enumeration[:constant].each do |constant| %>
  <%= constant[:name] %> = <%= constant[:value].to_s %>, <%= constant[:description].nil? ? "" : "//!< #{constant[:description]}" %>
  <% end # constant %>
};

<% end # enumeration %>
